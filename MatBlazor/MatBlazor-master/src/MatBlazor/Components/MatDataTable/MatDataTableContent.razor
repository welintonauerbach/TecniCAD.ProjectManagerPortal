@namespace MatBlazor
@inherits BaseMatDomComponent
@typeparam TItem

<CascadingValue Value="@MatDataTableColumnRenderMode.HeaderCell">
    <thead>
    <tr class="mdc-data-table__header-row">
        @ChildContent(default(TItem))
    </tr>
    </thead>
</CascadingValue>
<CascadingValue Value="@MatDataTableColumnRenderMode.RowCell">
    <tbody class="mdc-data-table__content">
    @foreach (var item in Items)
    {
        <tr class="mdc-data-table__row">
            @ChildContent(item)
        </tr>
    }
    </tbody>
</CascadingValue>

