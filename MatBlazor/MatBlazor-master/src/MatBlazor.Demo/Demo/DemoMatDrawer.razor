<h5 class="mat-h5">Opened</h5>
<DemoContainer SourcePath=".\..\..\MatBlazor.Demo\Frames\MatDrawerPageFrame.razor">
    <Content>
        <iframe src="MatDrawerFrame" style="width: 100%; height: 50%;"></iframe>
    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"@page ""/MatDrawerFrame""

<MatDrawerContainer Style=""width: 100vw; height: 100vh;"">
    <MatDrawer @bind-Opened=""@Opened"">
        Drawer Content
    </MatDrawer>
    <MatDrawerContent>
        <div>
            <MatButton OnClick=""@((e) => ButtonClicked())"">
                @if (Opened)
                {
                    <span>Hide Menu</span>
                }
                else
                {
                    <span>Open Menu</span>
                }
            </MatButton>
        </div>
        <p>Page Content</p>
    </MatDrawerContent>
</MatDrawerContainer>


@code
{
    bool Opened = true;

    void ButtonClicked()
    {
        Opened = !Opened;
    }

}")></BlazorFiddle>
    </SourceContent>
</DemoContainer>


