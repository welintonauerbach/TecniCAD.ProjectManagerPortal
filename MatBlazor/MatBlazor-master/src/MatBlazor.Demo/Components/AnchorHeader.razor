@code
{

    private string GetUrl()
    {
        var url = NavigationManager.Uri;
        if (url != null)
        {
            var hp = url.IndexOf("#");
            if (hp>=0)
            {
                url = url.Substring(0, hp);
            }
        }
        else
        {
            url = "";
        }
        return $"{url}#{Text}";
    }

    [Parameter]
    public string Text { get; set; }
}
